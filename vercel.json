{
  "functions": {
    "src/app/api/daily-email/route.ts": {
      "maxDuration": 30
    },
    "src/app/api/stripe-sync/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/cleanup-expired-bookings/route.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/daily-email",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/stripe-sync",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/cleanup-expired-bookings",
      "schedule": "*/15 * * * *"
    }
  ]
} 